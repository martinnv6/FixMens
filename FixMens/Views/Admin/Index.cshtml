<h2>Panel de Administrador</h2>

<div class="row">
    <div class="col s6">
        <h5>Equipos en taller</h5>
        <table class="striped">
            <thead>
            <tr>
                <th>
                    Descripción
                </th>
                <th>
                    Cantidad
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.EquiposEnTaller)
